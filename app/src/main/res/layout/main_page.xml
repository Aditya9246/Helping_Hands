<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-black"
        android:text="Welcome, "
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentEventsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="104dp"
        android:fontFamily="sans-serif-black"
        android:text="Current Opportunities:"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/eventsButton"
        android:layout_width="90dp"
        android:layout_height="66dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="772dp"
        android:background="#00FFFFFF"
        android:contentDescription="events"
        android:scaleType="fitCenter"
        android:elevation="10dp"
        android:src="@drawable/baseline_event_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="772dp"
        android:background="#00FFFFFF"
        android:contentDescription="profile"
        android:scaleType="fitCenter"
        android:elevation="10dp"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="102dp"
        android:layout_height="66dp"
        android:layout_marginStart="296dp"
        android:layout_marginTop="772dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:contentDescription="settings"
        android:elevation="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_settings_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="400dp"
        android:layout_height="504dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="260dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Event1Button"
                    android:layout_width="156dp"
                    android:layout_height="133dp"
                    android:clickable="false"
                    android:foreground="@drawable/cleanupvolunteering"
                    android:text="Button"
                    android:visibility="invisible"
                    app:icon="@drawable/cleanupvolunteering" />

                <TextView
                    android:id="@+id/Event1Text"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:text="EVENT NAME \n EVENT DESCRIPTION"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Event2Button"
                    android:layout_width="156dp"
                    android:layout_height="133dp"
                    android:clickable="false"
                    android:foreground="@drawable/cleanupvolunteering"
                    android:text="Button"
                    android:visibility="invisible"
                    app:icon="@drawable/cleanupvolunteering" />

                <TextView
                    android:id="@+id/Event2Text"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:text="EVENT NAME \n EVENT DESCRIPTION"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Event3Button"
                    android:layout_width="156dp"
                    android:layout_height="133dp"
                    android:clickable="false"
                    android:foreground="@drawable/cleanupvolunteering"
                    android:text="Button"
                    android:visibility="invisible"
                    app:icon="@drawable/cleanupvolunteering" />

                <TextView
                    android:id="@+id/Event3Text"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:text="EVENT NAME \n EVENT DESCRIPTION"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/Event4Button"
                    android:layout_width="156dp"
                    android:layout_height="133dp"
                    android:clickable="false"
                    android:foreground="@drawable/cleanupvolunteering"
                    android:text="Button"
                    android:visibility="invisible"
                    app:icon="@drawable/cleanupvolunteering" />

                <TextView
                    android:id="@+id/Event4Text"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:text="EVENT NAME \n EVENT DESCRIPTION"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/Event5Button"
                    android:layout_width="156dp"
                    android:layout_height="133dp"
                    android:clickable="false"
                    android:foreground="@drawable/cleanupvolunteering"
                    android:text="Button"
                    android:visibility="invisible"
                    app:icon="@drawable/cleanupvolunteering" />

                <TextView
                    android:id="@+id/Event5Text"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:text="EVENT NAME \n EVENT DESCRIPTION"
                    android:visibility="invisible" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="200dp"
        android:text="Filter Event Type:"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/solidBar"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="770dp"
        android:visibility="visible"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/bottom_bar_background" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="186dp"
        android:layout_height="48dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="188dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>