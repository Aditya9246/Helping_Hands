<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="400dp"
        android:layout_height="504dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="260dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Event1ButtonA"
                    android:layout_width="156dp"
                    android:layout_height="133dp"
                    android:clickable="false"
                    android:foreground="@drawable/cleanupvolunteering"
                    android:text="Button"
                    android:visibility="invisible"
                    app:icon="@drawable/cleanupvolunteering" />

                <TextView
                    android:id="@+id/Event1TextA"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:text="EVENT NAME \n EVENT DESCRIPTION"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Event2ButtonA"
                    android:layout_width="156dp"
                    android:layout_height="133dp"
                    android:clickable="false"
                    android:foreground="@drawable/cleanupvolunteering"
                    android:text="Button"
                    android:visibility="invisible"
                    app:icon="@drawable/cleanupvolunteering" />

                <TextView
                    android:id="@+id/Event2TextA"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:text="EVENT NAME \n EVENT DESCRIPTION"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Event3ButtonA"
                    android:layout_width="156dp"
                    android:layout_height="133dp"
                    android:clickable="false"
                    android:foreground="@drawable/cleanupvolunteering"
                    android:text="Button"
                    android:visibility="invisible"
                    app:icon="@drawable/cleanupvolunteering" />

                <TextView
                    android:id="@+id/Event3TextA"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:text="EVENT NAME \n EVENT DESCRIPTION"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/Event4ButtonA"
                    android:layout_width="156dp"
                    android:layout_height="133dp"
                    android:clickable="false"
                    android:foreground="@drawable/cleanupvolunteering"
                    android:text="Button"
                    android:visibility="invisible"
                    app:icon="@drawable/cleanupvolunteering" />

                <TextView
                    android:id="@+id/Event4TextA"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:text="EVENT NAME \n EVENT DESCRIPTION"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/Event5ButtonA"
                    android:layout_width="156dp"
                    android:layout_height="133dp"
                    android:clickable="false"
                    android:foreground="@drawable/cleanupvolunteering"
                    android:text="Button"
                    android:visibility="invisible"
                    app:icon="@drawable/cleanupvolunteering" />

                <TextView
                    android:id="@+id/Event5TextA"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:text="EVENT NAME \n EVENT DESCRIPTION"
                    android:visibility="invisible" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/settingsButton4"
        android:layout_width="102dp"
        android:layout_height="66dp"
        android:layout_marginStart="304dp"
        android:layout_marginTop="775dp"
        android:background="#00FFFFFF"
        android:contentDescription="settings"
        android:elevation="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_settings_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/profileButton4"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="775dp"
        android:background="#00FFFFFF"
        android:contentDescription="profile"
        android:elevation="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/eventsButton4"
        android:layout_width="90dp"
        android:layout_height="66dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="775dp"
        android:background="#00FFFFFF"
        android:contentDescription="events"
        android:elevation="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_event_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:fontFamily="sans-serif-medium"
        android:text="My Events:"
        android:textColor="#000000"
        android:textSize="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/noEventsTextAdmin"
        android:layout_width="280dp"
        android:layout_height="46dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="108dp"
        android:fontFamily="sans-serif-black"
        android:text="No Events to display"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/addEventButton"
        android:layout_width="69dp"
        android:layout_height="77dp"
        android:layout_marginStart="316dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="addEventButton"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/baseline_add_circle_24" />

    <TextView
        android:id="@+id/addEventText"
        android:layout_width="83dp"
        android:layout_height="40dp"
        android:layout_marginStart="316dp"
        android:layout_marginTop="152dp"
        android:text="Add Event"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/solidBar"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="770dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/bottom_bar_background" />

</androidx.constraintlayout.widget.ConstraintLayout>