<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageButton
        android:id="@+id/eventsButton6"
        android:layout_width="90dp"
        android:layout_height="66dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="775dp"
        android:background="#00FFFFFF"
        android:contentDescription="events"
        android:elevation="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_event_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/profileButton6"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="775dp"
        android:background="#00FFFFFF"
        android:contentDescription="profile"
        android:elevation="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/settingsButton6"
        android:layout_width="102dp"
        android:layout_height="66dp"
        android:layout_marginStart="292dp"
        android:layout_marginTop="775dp"
        android:background="#00FFFFFF"
        android:contentDescription="settings"
        android:elevation="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_settings_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="130dp"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="240dp"
        android:fontFamily="sans-serif-black"
        android:text="Event Name:"
        android:textColor="#000000"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="308dp"
        android:fontFamily="sans-serif-black"
        android:text="Description:"
        android:textColor="#000000"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eventNameTextContent"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="240dp"
        android:fontFamily="sans-serif-black"
        android:text="Sample name"
        android:textColor="#000000"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eventDescriptionTextContent"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="308dp"
        android:fontFamily="sans-serif-black"
        android:text="Sample description"
        android:textColor="#000000"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SignUpButtonEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="652dp"
        android:backgroundTint="#2195F2"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/CancelButtonEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="244dp"
        android:layout_marginTop="652dp"
        android:backgroundTint="#FF0000"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateTextHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="548dp"
        android:fontFamily="sans-serif-black"
        android:text="Date:"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="548dp"
        android:fontFamily="sans-serif-black"
        android:text="Sample Date"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/chatButton"
        android:layout_width="88dp"
        android:layout_height="70dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="644dp"
        android:backgroundTint="#FFFFFF"
        android:clickable="false"
        android:foreground="@drawable/baseline_chat_24"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="169dp"
        android:layout_height="164dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/volunteer_logo_blue"/>

    <ImageView
        android:id="@+id/solidBar"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="770dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/bottom_bar_background" />
</androidx.constraintlayout.widget.ConstraintLayout>